---
interface Props {
  src: string;
  alt: string;
  className?: string;
}

const { src, alt, className = "" } = Astro.props;

// Función para generar URL de imagen WebP optimizada
function getOptimizedImageUrl(url: string) {
  if (url.startsWith('https://images.unsplash.com')) {
    // Agregar parámetros de optimización para Unsplash
    return `${url}&fm=webp&q=80&w=1200`;
  }
  return url;
}
---

<img 
  src={getOptimizedImageUrl(src)}
  alt={alt}
  class={className}
  loading="lazy"
  decoding="async"
/>